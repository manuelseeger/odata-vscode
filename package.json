{
  "name": "odata",
  "displayName": "OData",
  "description": "OData Query Language Support",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/manuelseeger/odata-vscode.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "odata",
        "aliases": [
          "OData",
          "odata"
        ],
        "extensions": [
          ".odata"
        ],
        "configuration": "./odata.configuration.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "assets/icon-odata.png",
          "id": "odata.profiles-view",
          "name": "OData Endpoint Profiles"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "odata.requestMetadata",
          "when": "viewItem == odata.profile",
          "group": "inline@1"
        },
        {
          "command": "odata.editProfile",
          "when": "viewItem == odata.profile",
          "group": "inline@2"
        },
        {
          "command": "odata.deleteProfile",
          "when": "viewItem == odata.profile",
          "group": "inline@3"
        }
      ],
      "view/title": [
        {
          "command": "odata.addProfile",
          "when": "view == odata.profiles-view",
          "group": "navigation"
        }
      ]
    },
    "grammars": [
      {
        "language": "odata",
        "scopeName": "source.odata",
        "path": "./syntaxes/odata.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "odata.getMetadata",
        "title": "OData: Get Metadata"
      },
      {
        "command": "odata.selectProfile",
        "title": "OData: Select Endpoint Profile"
      },
      {
        "command": "odata.addProfile",
        "title": "OData: Add Endpoint Profile",
        "icon": "$(add)"
      },
      {
        "command": "odata.deleteProfile",
        "title": "Delete HTTP Profile",
        "icon": "$(trash)",
        "when": "viewItem == profile"
      },
      {
        "command": "odata.editProfile",
        "title": "Edit HTTP Profile",
        "icon": "$(edit)",
        "when": "viewItem == profile"
      },
      {
        "command": "odata.requestMetadata",
        "title": "Request Endpoint Metadata",
        "icon": "$(refresh)",
        "when": "viewItem == profile"
      }
    ],
    "chatParticipants": [
      {
        "id": "odata.odata-chat",
        "name": "odata",
        "fullName": "OData",
        "description": "OData Query",
        "isSticky": true
      }
    ],
    "configuration": {
      "id": "odata",
      "type": "object",
      "title": "OData",
      "properties": {
        "odata.defaultFormat": {
          "type": "string",
          "description": "Default format for OData responses",
          "enum": [
            "json",
            "xml"
          ],
          "enumDescriptions": [
            "JSON",
            "XML"
          ],
          "default": "json"
        },
        "odata.metadata.filterNs": {
          "type": "array",
          "description": "Filter namespaces in the OData metadata file",
          "default": [],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce-latest": "vsce package -o odata-vscode-latest.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@types/vscode-webview": "^1.57.5",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "vsce": "^2.15.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@odata2ts/odata2ts": "^0.39.1",
    "@vscode-elements/elements-lite": "^0.3.0",
    "@vscode/codicons": "^0.0.36",
    "@xmldom/xmldom": "^0.9.8",
    "tiktoken": "^1.0.20",
    "undici": "^6.21.2",
    "xml2js": "^0.6.2"
  }
}
